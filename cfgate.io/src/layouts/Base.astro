---
import '../styles/global.css'

interface Props {
  title: string
  description?: string
}

const {
  title,
  description = 'Kubernetes-native Cloudflare management.',
} = Astro.props
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='utf-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <meta name='description' content={description} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
