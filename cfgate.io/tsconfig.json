{
  "compilerOptions": {
    // Target & Module
    "target": "es2024",
    "module": "nodenext",
    "moduleResolution": "node16",
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Error",
      "ESNext.Iterator",
      "ESNext.Promise"
    ],
    // Types
    "types": ["@cloudflare/vitest-pool-workers", "node"],
    // Strict mode
    "strict": true,
    "noEmit": true,
    "declaration": true,
    "skipLibCheck": true,
    // Module interop
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // Additional features
    "resolveJsonModule": true
  },
  "include": ["src", "tests"],
  "exclude": ["node_modules", "docs"]
}
