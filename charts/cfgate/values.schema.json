{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["image"],
  "properties": {
    "replicaCount": {
      "type": "integer",
      "minimum": 1,
      "default": 2,
      "description": "Number of controller replicas"
    },
    "image": {
      "type": "object",
      "required": ["repository"],
      "properties": {
        "repository": {
          "type": "string",
          "description": "Container image repository"
        },
        "tag": {
          "type": "string",
          "description": "Container image tag (defaults to Chart.AppVersion)"
        },
        "pullPolicy": {
          "type": "string",
          "enum": ["Always", "Never", "IfNotPresent"],
          "default": "IfNotPresent",
          "description": "Image pull policy"
        }
      }
    },
    "imagePullSecrets": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          }
        }
      },
      "default": [],
      "description": "Image pull secrets"
    },
    "nameOverride": {
      "type": "string",
      "default": "",
      "description": "Override the chart name"
    },
    "fullnameOverride": {
      "type": "string",
      "default": "",
      "description": "Override the full release name"
    },
    "namespaceOverride": {
      "type": "string",
      "default": "",
      "description": "Override the release namespace"
    },
    "installCRDs": {
      "type": "boolean",
      "default": true,
      "description": "Install CRDs with the chart"
    },
    "rbac": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "default": true,
          "description": "Create RBAC resources"
        }
      }
    },
    "serviceAccount": {
      "type": "object",
      "properties": {
        "create": {
          "type": "boolean",
          "default": true,
          "description": "Create a service account"
        },
        "name": {
          "type": "string",
          "default": "",
          "description": "Service account name (generated if empty)"
        },
        "annotations": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "default": {},
          "description": "Service account annotations"
        }
      }
    },
    "metrics": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8080,
          "description": "Metrics endpoint port"
        },
        "service": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": true,
              "description": "Create metrics service"
            },
            "port": {
              "type": "integer",
              "minimum": 1,
              "maximum": 65535,
              "default": 8080,
              "description": "Metrics service port"
            },
            "annotations": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "default": {},
              "description": "Metrics service annotations"
            }
          }
        },
        "serviceMonitor": {
          "type": "object",
          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "description": "Create Prometheus ServiceMonitor"
            },
            "namespace": {
              "type": "string",
              "default": "",
              "description": "ServiceMonitor namespace"
            },
            "interval": {
              "type": "string",
              "default": "30s",
              "description": "Scrape interval"
            },
            "labels": {
              "type": "object",
              "additionalProperties": {
                "type": "string"
              },
              "default": {},
              "description": "Additional ServiceMonitor labels"
            }
          }
        }
      }
    },
    "health": {
      "type": "object",
      "properties": {
        "port": {
          "type": "integer",
          "minimum": 1,
          "maximum": 65535,
          "default": 8081,
          "description": "Health probe port"
        }
      }
    },
    "resources": {
      "type": "object",
      "properties": {
        "requests": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU request"
            },
            "memory": {
              "type": "string",
              "description": "Memory request"
            }
          }
        },
        "limits": {
          "type": "object",
          "properties": {
            "cpu": {
              "type": "string",
              "description": "CPU limit"
            },
            "memory": {
              "type": "string",
              "description": "Memory limit"
            }
          }
        }
      },
      "description": "Resource requests and limits"
    },
    "securityContext": {
      "type": "object",
      "description": "Container security context"
    },
    "podSecurityContext": {
      "type": "object",
      "description": "Pod security context"
    },
    "nodeSelector": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Node selector"
    },
    "tolerations": {
      "type": "array",
      "items": {
        "type": "object"
      },
      "default": [],
      "description": "Tolerations"
    },
    "affinity": {
      "type": "object",
      "default": {},
      "description": "Affinity rules"
    },
    "podAnnotations": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Pod annotations"
    },
    "podLabels": {
      "type": "object",
      "additionalProperties": {
        "type": "string"
      },
      "default": {},
      "description": "Pod labels"
    }
  }
}
